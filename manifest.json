{
  "manifest_version": 3,
  "name": "Quick Translator Pro - DeepSeek AI",
  "description": "Traduction instantan√©e avec IA DeepSeek, flashcards intelligentes et mode pratique",
  "version": "3.0",
  "permissions": [
    "storage",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://api.deepseek.com/*",
    "https://api.mymemory.translated.net/*",
    "https://lingva.ml/*",
    "https://translate.googleapis.com/*",
    "https://libretranslate.de/*",
    "https://translate.google.com/*",
    "https://api.fanyi.baidu.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Quick Translator Pro"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}