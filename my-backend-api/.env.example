# Configuration du serveur
NODE_ENV=development
PORT=3000

# Base de données PostgreSQL (Render fournit DATABASE_URL automatiquement)
DATABASE_URL=postgresql://user:password@host:5432/database

# JWT Secret (générer avec: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_key_here

# Stripe (optionnel pour les paiements)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# URL du frontend (pour CORS)
FRONTEND_URL=https://lexiflow.com

# Email (optionnel)
EMAIL_FROM=noreply@lexiflow.com
RESEND_API_KEY=your_resend_api_key

# DeepSeek API (optionnel)
DEEPSEEK_API_KEY=your_deepseek_api_key